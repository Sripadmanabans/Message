<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<servlet>
   		<servlet-name>MessageRegister</servlet-name>
		<servlet-class>message.register.MessageRegistrationServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>MessageRegister</servlet-name>
		<url-pattern>/message/register</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>MessageList</servlet-name>
	    <servlet-class>message.list.MessageListServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>MessageList</servlet-name>
	    <url-pattern>/message/list</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>MessageSend</servlet-name>
	    <servlet-class>message.send.MessageSendServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>MessageSend</servlet-name>
	    <url-pattern>/message/send</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
</web-app>
